{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "gcc Complier",
			"command": "E:/software/MinGW/mingw64/bin/gcc.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-std=c++2a",
				"${workspaceFolder}\\*.cpp",
				"-o",
				"${workspaceFolder}\\main.exe"
			],
			"options": {
				"cwd": "E:/software/MinGW/mingw64/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "编译器: E:/software/MinGW/mingw64/bin/gcc.exe"
		},
		{
			"type": "cppbuild",
			"label": "g++ Complier",
			"command": "E:\\software\\MinGW\\mingw64\\bin\\g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-std=c++2a",
				"${workspaceFolder}\\*.cpp",
				"-o",
				"${workspaceFolder}\\main.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: E:\\software\\MinGW\\mingw64\\bin\\g++.exe"
		}
	]
}